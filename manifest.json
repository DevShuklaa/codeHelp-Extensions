{
  "manifest_version": 3,
  "name": "ThinkCode V2",
  "version": "2.0",
  "description": "AI Tutor for LeetCode, HackerRank & CodeChef",
  "permissions": ["storage"],
  "host_permissions": [
    "*://leetcode.com/*",
    "*://www.hackerrank.com/*",
    "*://www.codechef.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
